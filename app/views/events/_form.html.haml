= bootstrap_form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :date
  
  = f.text_area :description, rows: 3
  
  = f.submit 'Save'